<?xml version="1.0" encoding="UTF-16" standalone="yes"?>
<yaf>

    <specs
        topSpeed="0.5"
        minSpeed="-0.1"
        acceleration="0.01"
        deceleration="0.01"
        turnRate="0.01"
        brakingRate="0.01"
    />

    <textures>
        <texture id="tires" filepath="scene/vehicles/vehicle1/tires_tex.png" />
    </textures>

    <materials>
        <material id="woodApp"
            emissive="0.0 0.0 0.0 1"
            color="1.0 1.0 1.0 1.0"
            specular="0 0 0 0"
            shininess="0"
            textureref="tires"
        />

    </materials>

    <graph rootid="car">
        <node id="car">
            <transforms>
                <translate value3="0 0.2 0" />
                <scale value3="0.2 0.2 0.2" />
            </transforms>
            <children>
                <noderef id="body" />
                <noderef id="wheelBR" />
                <noderef id="wheelBL" />
                <noderef id="wheelFR" />
                <noderef id="wheelFL" />
                <noderef id="brake" />
            </children>
        </node>

        <node id="body">
            <transforms>
                <translate value3="0 0.01 0" />
            </transforms>    
            <children>
                <primitive>
                    <model3d filepath="scene/vehicles/vehicle1/f1_car_color.gltf" />
                </primitive>
            </children>
        </node>

        <node id="wheel">
            <transforms>
                <rotate value3="0 0 1.5708" />
            </transforms>

            <materialref id="woodApp" />

            <children>
                <primitive>
                    <cylinder base="1" top="1" height="0.75" slices="32" stacks="32"
                        capsclose="true" />
                </primitive>
            </children>
        </node>

        <node id="wheelBR">
            <transforms>
                <translate value3="-3.0 0 -3" />
                <rotate value3="0 0 0" />
            </transforms>
            <children>
                <noderef id="wheel" />
            </children>
        </node>

        <node id="wheelBL">
            <transforms>
                <translate value3="3.0 0 -3" />
                <rotate value3="0 0 0" />
            </transforms>
            <children>
                <noderef id="wheel" />
            </children>
        </node>

        <node id="wheelFL">
            <transforms>
                <translate value3="2.5 0 8.75" />
                <rotate value3="0 0 0" />
            </transforms>
            <children>
                <noderef id="wheel" />
            </children>
        </node>

        <node id="wheelFR">
            <transforms>
                <translate value3="-2.5 0 8.75" />
                <rotate value3="0 0 0" />
            </transforms>
            <children>
                <noderef id="wheel" />
            </children>
        </node>

        <node id="brake">
            <children>
                <spotlight id="brakelight1"
                    color="255 0 0 0"
                    position="0 0.2 -0.01"
                    intensity="2"
                    decay="2"
                    target="0 0 0"
                    angle="15"
                    enabled="false"
                />

                <spotlight id="reverselight1"
                    color="255 255 255 0"
                    position="0 0.2 -0.01"
                    intensity="2"
                    decay="2"
                    target="0 0 0"
                    angle="15"
                    enabled="false"
                />

                <spotlight id="headlight1"
                    color="238 221 130 0"
                    position="0 0 4"
                    intensity="5"
                    decay="2"
                    target="0 0 0"
                    angle="25"
                    enabled="false"
                />
            </children>
        </node>
    </graph>
</yaf>